<%- include('./partials/header.ejs') %>
  <body>
    <img src="/img/logo.png" alt="logo" />
    <% if (user) { %>
    <h1 class="intro">Hi, <%= user[0].username %>, Here are your tasks.</h1>
    <form class="inputTodoForm" role="form" id="inputTodoForm">
      <input
        type="text"
        id="taskInput"
        name="tasks"
        class="create_task"
        required
      />
      <button type="submit" class="add">add</button>
    </form>

    <div class="tasks">
      <h2>Tasks</h2>
      <ul id="new_tasks" class="new_tasks"></ul>
    </div>

    <form action="/users/logout" method="get">
      <button>Logout</button>
    </form>
    <% } else { %>
    <form action="/users/logout" method="get">
      <button>Logout</button>
    </form>
    <% } %>
  </body>
  <%- include('./partials/footer.ejs') %>
</html>
